.header
  pos absolute
  l 0
  t 0
  w 100%
  z-index 2
  padding 19px 33px
  df(center, space-between)
  &__left
    df(center, flex-start)
  &__logo
    pos relative
    t 14px
  &__socials
    df(center, flex-start)
    ml 100px
    &-elem
      transition .7s filter
      &:hover
        filter brightness(0) invert(1)
      & + &
        ml 30px
      &[data-type="yt"]
        size 15px 11px
        background url('data:image/png;base64,') no-repeat center
      &[data-type="fb"]
        size 13px
        background url('data:image/png;base64,') no-repeat center
      &[data-type="tw"]
        size 15px 12px
        background url('data:image/png;base64,') no-repeat center
      &[data-type="inst"]
        size 13px
        background url('data:image/png;base64,') no-repeat center
  &__order
    ml 75px
    fontify 14px 600 41px
  &__search
    ml 37px
    size 21px
    background url('data:image/png;base64,') no-repeat center
    transition .7s opacity
    &:hover
      opacity .6
  &__right
    ml 40px
    dfv()
  &__row
    w 100%
    df(flex-start, flex-end)
    & + &
      mt 25px
  &__lang
    color white
    fontify 12px 700 14px
    mr 52px
    letter-spacing .18em
    transition .7s color
    &:hover
      color $blue
  &__tel
    color white
    fontify 12px 700 14px
    letter-spacing .18em