.menu
  @media $LandscapeMedium
    pos fixed
    z-index 11
    l -100%
    visibility hidden
    t 0
    opacity 0
    padding 34px 32px
    w 100%
    h 100%
    transition .7s visibility, .7s left, .7s opacity
    overflow-y auto
  @media $PortraitMin
    padding 40px 15px
  &__list
    df()
    @media $LandscapeMedium
      flex-direction column
      pr 0
      w 100%
  &__item
    pos relative
    @media $LandscapeMin
      w 100%
    &_tablet
      df(flex-start, space-between)
      pt 20px
      @media $LandscapeMinFrom
        dn()
    &_mobile
      @media $PortraitMediumFrom
        dn()
      @media $PortraitMin
        .header__order
          db()
          ml 0
    & + &
      ml 29px
      @media $desktopMedium
        ml 20px
      @media $LandscapeMedium
        ml 0
        mt 30px
  &__lang
    color white
    fontify 20px 600 20px
    letter-spacing .18em
    transition .7s color
  &__tel
    color white
    fontify 20px 600 20px
    letter-spacing .18em
    mr -3px
  &__href
    pos relative
    color white
    fontify 14px 600 18px
    transition .7s color
    @media $LandscapeMedium
      fontify 24px 600 32px
    &_active,
    &:hover
      color $blue
    &_active:after
      content ""
      pos absolute
      b -30px
      w 100%
      h 1px
      bgc $blue
      l 0
      @media $LandscapeMedium
        dn()
  &__sublist
    visibility hidden
    opacity 0
    pos absolute
    t 30px
    l -24px
    padding 22px 24px
    bgc $blue
    transition .3s visibility, .3s opacity, .3s top
    @media $LandscapeMedium
      visibility visible
      opacity 1
      pos relative
      t 0
      l 0
      padding 0
      bgc transparent
      mt 14px
    &:before
      content ""
      pos absolute
      l 0
      t -21px
      h 21px
      w 100%
      @media $LandscapeMedium
        dn()
    @media $LandscapeMediumMin
      ^[0]__item:hover &
        t 40px
        opacity 1
        visibility visible
    &-item
      & + &
        mt 16px
    &-href
      pos relative
      color white
      fontify 14px 600 18px
      transition .7s opacity
      @media $LandscapeMedium
        fontify 18px 600 24px
      &:hover,
      &_active
        opacity .7

body.burgeropen
  overflow hidden
  .menu
    visibility visible
    opacity 1
    l 0
    transition-delay .7s